                        Text="Day"
                        FontSize="{OnPlatform 22, iOS=14}"
                        VerticalTextAlignment="Center"
                        Style="{StaticResource SubHeadline}"/>
                </Border>
                <Border
                    Stroke="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource Black}}"
