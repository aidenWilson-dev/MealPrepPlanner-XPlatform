<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:MealPrepPlanner_XPlatform.Model"
             x:Class="MealPrepPlanner_XPlatform.View.RecipeBookPage">
    <ContentPage.BindingContext>
        <model:RecipeBook/>
    </ContentPage.BindingContext>
    
    <Grid
        Padding="50">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="*"/>
            <RowDefinition
                Height="4*"/>
        </Grid.RowDefinitions>
        
            
        <Label
            Text="Recipe Book"
            FontSize="50"
            Style="{StaticResource Headline}"/>
        
        <Grid
            Grid.Row="1"
            ColumnSpacing="20">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*"/>
                <ColumnDefinition
                    Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="*"/>
            </Grid.RowDefinitions>
            
            <Border
                Stroke="{StaticResource White}"
                StrokeThickness="4">
                
                <ListView/>
                
            </Border>
            
            <VerticalStackLayout
                Spacing="50"
                Grid.Column="1">
                
                <Button
                    x:Name="Add"
                    Text="Add"
                    HeightRequest="125"
                    Clicked="Add_OnClicked"/>
            
                <Button
                    x:Name="Delete"
                    Text="Delete"
                    HeightRequest="125"
                    Clicked="Delete_OnClicked"/>
        
                <Button
                    x:Name="Edit"
                    Text="Edit"
                    HeightRequest="125"
                    Clicked="Edit_OnClicked"/>
        
                <Button
                    x:Name="Close"
                    Text="Close"
                    HeightRequest="125"
                    Clicked="Close_OnClicked"/>
                
            </VerticalStackLayout>
        </Grid>
        
        
    </Grid>
    
</ContentPage>